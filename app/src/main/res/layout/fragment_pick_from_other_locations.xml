<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.ui.PickFromOtherLocationsFragment">

    <data>

        <variable
            name="viewModel"
            type="com.reece.pickingapp.viewmodel.PickFromOtherLocationsViewModel" />

        <variable
            name="viewHolder"
            type="com.reece.pickingapp.viewmodel.PickFromOtherLocationsViewHolderViewModel" />

        <variable
            name="product"
            type="com.reece.pickingapp.viewmodel.ProductModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_img_view"
            android:layout_width="@dimen/pick_card_img_size"
            android:layout_height="@dimen/pick_card_img_size"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border_image"
            android:contentDescription="@string/product_image_description"
            app:imageToLoad="@{ viewModel.productImageUrl }"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:placeholderDrawable="@{ @drawable/image_placeholder }"
            tools:src="@drawable/image_placeholder" />


        <TextView
            android:id="@+id/product_name_view"
            style="@style/MorscoLabelStyle9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xsmall"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:text="@{ product.description }"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/product_img_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ANVIL 1-1/4 COP RISER CLMP #CT121 500421045" />

        <TextView
            android:id="@+id/product_number_label"
            style="@style/MorscoLabelStyle10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xxsmall"
            android:layout_marginEnd="32dp"
            android:text="@{@string/pick_item_card_product_number(product.productId)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/product_name_view"
            app:layout_constraintTop_toBottomOf="@id/product_name_view"
            tools:text="PN #: 1234567890" />

        <TextView
            android:id="@+id/qnty_picked"
            style="@style/MorscoLabelStyle19"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_img_view"
            tools:text="QTY Picked: 3/5" />

        <TextView
            android:id="@+id/top_error_message"
            style="@style/ProductDataEntryErrorStyleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/qnty_picked"
            app:otherLocationsTopErrorMessage="@{viewModel.topErrorMessageState}"
            tools:text="Excess QTY"
            tools:visibility="visible" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="32dp"
            android:background="@color/morsco_primary_text_color"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_error_message" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/alt_locations_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/margin_xlarge"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_xlarge">


                <TextView
                    android:id="@+id/txt_question"
                    style="@style/MorscoLabelStyle1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/location_question"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="What was the other location that you picked from?" />

                <TextView
                    android:id="@+id/txt_enter_loca_qnty_label"
                    style="@style/MorscoLabelStyle16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/enter_loc_qnty_lable"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_question"
                    tools:text="Enter the location(s) and QTY(s) that you picked the remaining QTY from." />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pick_from_other_location_rv"
                    style="@style/MorscoRecyclerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adapter="@{ viewModel.pickFromOtherLocationsAdapter }"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/txt_enter_loca_qnty_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/add_another_location_label"
                    style="@style/MorscoLabelStyle9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/margin_small"
                    android:drawableStart="@drawable/ic_plus_icon"
                    android:drawablePadding="@dimen/margin_xsmall"
                    android:onClick="@{ () -> viewModel.addAnotherLocationButtonTapped() }"
                    android:text="@string/add_another_location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pick_from_other_location_rv"
                    tools:text="Add another location" />

                <CheckBox
                    android:id="@+id/back_order_checkbox"
                    style="@style/MorscoLabelStyle9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:text="@string/add_back_order"
                    android:onCheckedChanged="@{(compoundButton, checked) -> viewModel.onCheckedChange(compoundButton, checked)}"
                    android:checked="@{viewModel.backOrderCheckBox}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_another_location_label"
                    tools:text="Add Back order" />

                <TextView
                    android:id="@+id/bottom_error_message"
                    style="@style/ProductDataEntryErrorStyleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone"
                    tools:text="@string/split_qnty_insufficient"
                    tools:visibility="visible"
                    app:otherLocationsBottomErrorMessage="@{viewModel.bottomErrorMessageState}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/back_order_checkbox" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/complete_pick_button"
                    style="@style/MorscoButtonStyle1"
                    app:otherLocationsCompleteButtonState="@{viewModel.completeButtonState}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:enabled="true"
                    android:onClick="@{ () -> viewModel.completePickButtonTapped() }"
                    android:text="@string/complete_pick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bottom_error_message" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/progressBarCompletePick"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>