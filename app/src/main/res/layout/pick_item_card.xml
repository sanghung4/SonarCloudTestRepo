<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="dataEntryInterface"
            type="com.reece.pickingapp.interfaces.DataEntryInterface" />

        <variable
            name="viewModel"
            type="com.reece.pickingapp.viewmodel.ProductViewHolderViewModel" />

        <variable
            name="product"
            type="com.reece.pickingapp.viewmodel.ProductModel" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/product_card_view"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_small"
        android:layout_marginVertical="@dimen/margin_xsmall"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp"
        app:cardUIForValidationState="@{ viewModel.cardValidationState }">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/margin_small"
            android:paddingVertical="@dimen/margin_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/top_header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/product_location_label"
                        style="@style/MorscoLabelStyle8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{product.location}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="A20E10" />

                    <ImageView
                        android:id="@+id/product_img_view"
                        android:layout_width="@dimen/pick_card_img_size"
                        android:layout_height="@dimen/pick_card_img_size"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/border_image"
                        android:contentDescription="@string/product_image_description"
                        app:imageToLoad="@{ viewModel.productImageUrl }"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/product_location_label"
                        app:placeholderDrawable="@{ @drawable/image_placeholder }"
                        tools:src="@drawable/image_placeholder" />


                    <TextView
                        android:id="@+id/product_name_view"
                        style="@style/MorscoLabelStyle9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_xsmall"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@{ product.description }"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/product_img_view"
                        app:layout_constraintTop_toBottomOf="@id/product_location_label"
                        tools:text="ANVIL 1-1/4 COP RISER CLMP #CT121 500421045" />

                    <TextView
                        android:id="@+id/product_number_label"
                        style="@style/MorscoLabelStyle10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xxsmall"
                        android:text="@{@string/pick_item_card_product_number(product.productId)}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/product_name_view"
                        app:layout_constraintTop_toBottomOf="@id/product_name_view"
                        tools:text="PN #: 1234567890" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_body_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall">

                    <LinearLayout
                        android:id="@+id/layout_product_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <include
                                android:id="@+id/include"
                                layout="@layout/data_entry"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                app:barcodeScanInterface="@{ viewModel }"
                                app:dataEntryInterface="@{ viewModel }"
                                app:dataEntryViewModel="@{ viewModel.productIdDataEntryViewModel }"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/btn_autofill"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:visibility="visible" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_autofill"
                                autoFillInputState="@{viewModel.isAutoFillEnable}"
                                android:layout_width="wrap_content"
                                android:layout_height="63dp"
                                android:layout_marginTop="1dp"
                                android:insetLeft="0dp"
                                android:insetRight="0dp"
                                android:minWidth="0dp"
                                android:onClick="@{() -> viewModel.autoFillBtnClick()}"
                                android:padding="12dp"
                                android:text="@string/auto_fill"
                                android:textColor="@color/morsco_blue_5"
                                android:textSize="@dimen/button_text_size"
                                app:backgroundTint="@color/white"
                                app:cornerRadius="2dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/include"
                                app:strokeColor="@color/morsco_blue_5"
                                app:strokeWidth="3dp"/>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/serial_numbers_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toTopOf="@+id/quantity_layout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/layout_product_id"
                        app:layout_constraintTop_toBottomOf="@+id/layout_product_id"
                        app:productCheckForSerial="@{ viewModel }">

                    </LinearLayout>


                    <include
                        android:id="@+id/quantity_layout"
                        layout="@layout/data_entry"
                        android:layout_width="@dimen/button_width_100"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_small"
                        app:dataEntryInterface="@{ viewModel }"
                        app:dataEntryViewModel="@{ viewModel.quantityDataEntryViewModel }"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/serial_numbers_holder"
                        tools:visibility="visible" />

                    <RelativeLayout
                        android:id="@+id/layout_confirm_container"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/quantity_layout"
                        app:layout_constraintTop_toTopOf="@+id/quantity_layout">

                        <TextView
                            android:id="@+id/slash_character"
                            style="@style/MorscoLabelStyle11"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="@dimen/margin_xsmall"
                            android:layout_marginStart="12dp"
                            android:gravity="center"
                            android:text="@string/slash_character" />

                        <TextView
                            android:id="@+id/quantity_max"
                            style="@style/MorscoLabelStyle11"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignStart="@+id/slash_character"
                            android:layout_marginStart="4dp"
                            android:gravity="center"
                            android:paddingStart="@dimen/margin_xxsmall"
                            android:text="@{ Integer.toString(product.quantity) }"
                            app:layout_constraintBottom_toBottomOf="@+id/slash_character"
                            app:layout_constraintStart_toEndOf="@id/slash_character"
                            app:layout_constraintTop_toTopOf="@+id/slash_character"
                            tools:text="8" />


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/quantity_done_btn"
                            style="@style/MorscoButtonStyle2"
                            android:layout_width="@dimen/button_width_100"
                            android:layout_height="63dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:enabled="false"
                            android:onClick="@{() -> viewModel.submitButtonTapped()}"
                            android:text="@string/confirm"
                            app:isEnabledForState="@{ viewModel.cardValidationState }"
                            app:layout_constraintBottom_toBottomOf="@+id/quantity_max"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/quantity_max" />

                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <View
                    android:id="@+id/focus_grabber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_xsmall"
                    android:background="@color/white"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:takesFocus="@{ viewModel.cardValidationState }" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pick_progress_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pick_loader_bg_color"
            app:cardCornerRadius="@dimen/card_corner_def_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:visibilityForState="@{ viewModel.cardValidationState }"
            tools:visibility="gone">

            <ProgressBar
                android:id="@+id/pick_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>