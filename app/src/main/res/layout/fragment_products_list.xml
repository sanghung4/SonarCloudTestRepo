<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.ui.ProductsFragment">

    <data>

        <variable
            name="viewModel"
            type="com.reece.pickingapp.viewmodel.ProductsFragmentViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/customer_info_card"
            style="@style/ItemOrderCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            app:cardCornerRadius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/horizontal_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/header_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ship_via_label"
                        style="@style/ItemOrderCardLabelStyle.Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{ viewModel.getShipViaText() }"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        tools:text="OT OUR TRUCK" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/MorscoLabelStyle4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{ viewModel.getPickCount() }"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="1/11" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/header_holder">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/customer_label"
                        style="@style/ItemOrderCardLabelStyle.Description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@{ viewModel.getCustomerText() }"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Customer: MORRISON CORPORATE BRANCH" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/order_id"
                        style="@style/ItemOrderCardLabelStyle.Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xxsmall"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@{ viewModel.getOrderText() }"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/customer_label"
                        tools:text="Order Number: 583835583" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/divider"
                        style="@style/MorscoLabelStyle19"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_1"
                        android:layout_marginTop="@dimen/margin_xsmall"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        viewVisibility="@{viewModel.shippingDetailsVisibility}"
                        app:layout_constraintTop_toBottomOf="@+id/order_id" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/shipping_instruction_label"
                        style="@style/MorscoLabelStyle19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xsmall"
                        android:text="@string/shipping_instruction"
                        viewVisibility="@{viewModel.shippingDetailsVisibility}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider"
                        tools:text="Shipping Instructions:" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/shipping_instruction_Description"
                        style="@style/ItemOrderCardLabelStyle.Description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{ viewModel.shippingDetails }"
                        viewVisibility="@{viewModel.shippingDetailsVisibility}"
                        android:ellipsize="end"
                        android:maxLines="@{viewModel.shippingDetailsMaxLines}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/shipping_instruction_label"
                        tools:text="DELIVER TODAY BY NOON ACT: ZACH JAYNES CELL: 972-978-9752"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/show_more_less_label"
                        style="@style/MorscoLabelStyle20"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:underlineText="@{viewModel.showMoreOrLessLabel}"
                        android:clickable="true"
                        android:onClick="@{() -> viewModel.showMoreOrLessButtonTapped() }"
                        viewVisibility="@{viewModel.showMoreOrLessVisibility}"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/shipping_instruction_Description"
                        tools:text="Show More"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                style="@style/ProgressIndicatorStyle"
                android:id="@+id/login_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:progress="@{viewModel.orderProgressData}"
                app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recycler_holder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customer_info_card">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/products_rv"
                style="@style/MorscoRecyclerStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adapter="@{ viewModel.productsAdapter }"
                android:layout_marginTop="@dimen/margin_small"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:recyclerViewVisibility="@{ viewModel.productsResponseState }"
                tools:listitem="@layout/pick_item_card" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:visibility="@{ viewModel.locationFormVisible }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customer_info_card"
            tools:visibility="gone">

<!--            Can be removed with warning-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

<!--                Remove when warning is no longer valid-->
                <include
                    android:id="@+id/staging_location_warning"
                    layout="@layout/static_warning_message"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/staging_order_warning"
                    android:layout_margin="@dimen/margin_small"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/location_packaging_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:padding="@dimen/margin_xlarge"
                    app:layout_constraintTop_toBottomOf="@id/customer_info_card">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/location_title_view"
                        style="@style/MorscoListLabelStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <include
                        android:id="@+id/stage_location_text_input_layout"
                        layout="@layout/data_entry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dataEntryInterface="@{ viewModel }"
                        app:dataEntryViewModel="@{ viewModel.locationDataEntryViewModel }"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/location_title_view"
                        tools:visibility="visible" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/packaging_title_view"
                        style="@style/MorscoLabelStyle18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_large"
                        android:text="@string/packaging"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/stage_location_text_input_layout"
                        tools:visibility="visible" />

                    <include
                        android:id="@+id/packaging_boxes_field"
                        layout="@layout/data_entry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xsmall"
                        app:dataEntryInterface="@{ viewModel }"
                        app:dataEntryViewModel="@{ viewModel.boxesDataEntryViewModel }"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/packaging_title_view"
                        tools:visibility="visible" />

                    <include
                        android:id="@+id/packaging_skids_field"
                        layout="@layout/data_entry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xsmall"
                        app:dataEntryInterface="@{ viewModel }"
                        app:dataEntryViewModel="@{ viewModel.skidsDataEntryViewModel }"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/packaging_boxes_field"
                        tools:visibility="visible" />

                    <include
                        android:id="@+id/packaging_bundles_field"
                        layout="@layout/data_entry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xsmall"
                        app:dataEntryInterface="@{ viewModel }"
                        app:dataEntryViewModel="@{ viewModel.bundlesDataEntryViewModel }"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/packaging_skids_field"
                        tools:visibility="visible" />

                    <include
                        android:id="@+id/packaging_pieces_field"
                        layout="@layout/data_entry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xsmall"
                        app:dataEntryInterface="@{ viewModel }"
                        app:dataEntryViewModel="@{ viewModel.piecesDataEntryViewModel }"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/packaging_bundles_field"
                        tools:visibility="visible" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/complete_pick_button"
                        style="@style/MorscoButtonStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_large"
                        android:onClick="@{ () -> viewModel.onCompleteStagingPickingClick() }"
                        android:text="@string/complete"
                        app:enabledForState="@{ viewModel.stagingState}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/packaging_pieces_field"
                        tools:visibility="visible" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </ScrollView>
        <ProgressBar
            android:id="@+id/products_fetch_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:progressVisibility="@{ viewModel.loaderState }" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
