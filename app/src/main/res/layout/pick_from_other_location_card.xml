<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.reece.pickingapp.viewmodel.PickFromOtherLocationsViewHolderViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/location_layout"
            layout="@layout/data_entry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            app:dataEntryInterface="@{ viewModel }"
            app:dataEntryViewModel="@{ viewModel.locationDataEntryViewModel }"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

        <include
            android:id="@+id/qnty_layout"
            layout="@layout/data_entry"
            android:layout_width="@dimen/quantity_text_edit_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:dataEntryInterface="@{ viewModel }"
            app:dataEntryViewModel="@{ viewModel.quantityDataEntryViewModel }"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageView
            android:visibility="@{viewModel.deleteButtonVisibility}"
            android:layout_width="@dimen/card_arrow_dimen"
            android:layout_height="@dimen/card_arrow_dimen"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="8dp"
            android:onClick="@{() -> viewModel.onRemoveItemClick()}"
            android:src="@drawable/ic_delete_bin"
            app:layout_constraintBottom_toBottomOf="@+id/qnty_layout"
            app:layout_constraintStart_toEndOf="@+id/qnty_layout"
            app:layout_constraintTop_toTopOf="@+id/qnty_layout" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <LinearLayout
            android:id="@+id/serial_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_xsmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location_layout">

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>