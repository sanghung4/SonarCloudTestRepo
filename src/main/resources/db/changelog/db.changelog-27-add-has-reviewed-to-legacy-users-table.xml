<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        logicalFilePath="classpath:changelog-27.xml"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="addHasReviewedToLegacyUsers" author="brian.wong@dialexa.com">
        <preConditions onFail="MARK_RAN" onFailMessage="legacy user table already contains has_reviewed">
            <not>
                <columnExists tableName="legacy_users" columnName="has_reviewed" />
            </not>
        </preConditions>
        <addColumn tableName="legacy_users">
            <column name="has_reviewed" type="BOOLEAN" defaultValueDate="false">
                <constraints nullable="false" />
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="legacy_users" columnName="has_reviewed" />
        </rollback>
    </changeSet>
    <changeSet author="brian.wong@dialexa.com" id="v27-add-has-reviewed-to-legacy-users">
        <tagDatabase tag="v27"/>
    </changeSet>
</databaseChangeLog>
