<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        logicalFilePath="classpath:changelog-53.xml"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="addInMaintenanceFeature" author="djackson@dialexa.com">
        <preConditions onFail="MARK_RAN" onFailMessage="erp_account_id already migrated">
            <not>
                <columnExists tableName="accounts" columnName="erp_account_id"/>
            </not>
        </preConditions>
        <addColumn tableName="accounts">
            <column name="erp_account_id" type="VARCHAR(200)">
                <constraints nullable="true"/>
            </column>
            <column name="is_billto" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="erp_id" type="UUID" />
        </addColumn>
        <addNotNullConstraint tableName="accounts" columnName="erp_id" defaultNullValue="762e40c5-ee77-4a77-8aef-fb07bd8bfb0a"/>
        <sql>
            update accounts
            set erp_account_id = erps_accounts.erp_account_id,
            is_billto = erps_accounts.is_billto,
            erp_id = erps_accounts.erp_id
            from erps_accounts
            where erps_accounts.account_id = accounts.id;
        </sql>
        <dropTable tableName="erps_accounts" />
        <rollback>
            <createTable tableName="erps_accounts">
                <column name="erp_account_id" type="VARCHAR(200)"/>
                <column name="is_billto" type="BOOLEAN" />
                <column name="account_id" type="UUID" />
                <column name="erp_id" type="UUID" />
            </createTable>
            <sql>
                insert into erps_accounts (erp_account_id, is_billto, account_id, erp_id)
                select erp_account_id, is_billto, id, erp_id from accounts;
            </sql>
            <dropColumn tableName="accounts" columnName="erp_account_id" />
            <dropColumn tableName="accounts" columnName="is_billto" />
            <dropColumn tableName="accounts" columnName="erp_id" />
        </rollback>
    </changeSet>
    <changeSet author="djackson@dialexa.com" id="v53-merge-erpsaccounts-accounts">
        <tagDatabase tag="v53"/>
    </changeSet>
</databaseChangeLog>