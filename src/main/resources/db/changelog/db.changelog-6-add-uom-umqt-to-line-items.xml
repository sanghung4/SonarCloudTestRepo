<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog logicalFilePath="classpath:changelog-6.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="brant.carthel@dialexa.com" id="addUomToLineItems">
        <preConditions onFail="MARK_RAN" onFailMessage="uom already exists on line_items">
            <not>
                <columnExists tableName="line_items" columnName="uom" />
            </not>
        </preConditions>
        <addColumn tableName="line_items">
            <column name="uom" type="VARCHAR(200)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="line_items" columnName="uom" />
        </rollback>
    </changeSet>
    <changeSet author="brant.carthel@dialexa.com" id="addUmqtToLineItems">
        <preConditions onFail="MARK_RAN" onFailMessage="umqt already exists on line_items">
            <not>
                <columnExists tableName="line_items" columnName="umqt" />
            </not>
        </preConditions>
        <addColumn tableName="line_items">
            <column name="umqt" type="VARCHAR(200)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="line_items" columnName="umqt" />
        </rollback>
    </changeSet>
    <changeSet author="brant.carthel@dialexa.com" id="tag-6-products">
        <tagDatabase tag="products-v6"/>
    </changeSet>
</databaseChangeLog>
