<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog logicalFilePath="classpath:changelog-15.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="brian.wong@dialexa.com" id="addTosPpColumnsToUserTable">
        <preConditions onFail="MARK_RAN" onFailMessage="user table already contains tos_accepted_at and pp_accepted_at">
            <not>
                <columnExists tableName="users" columnName="tos_accepted_at" />
                <columnExists tableName="users" columnName="pp_accepted_at" />
                <columnExists tableName="users_aud" columnName="tos_accepted_at" />
                <columnExists tableName="users_aud" columnName="pp_accepted_at" />
            </not>
        </preConditions>
        <addColumn tableName="users">
            <column name="tos_accepted_at" type="datetime" defaultValueDate="NOW()">
                <constraints nullable="false" />
            </column>
            <column name="pp_accepted_at" type="datetime" defaultValueDate="NOW()">
                <constraints nullable="false" />
            </column>
        </addColumn>
        <addColumn tableName="users_aud">
            <column name="tos_accepted_at" type="datetime" defaultValueDate="NOW()">
                <constraints nullable="false" />
            </column>
            <column name="pp_accepted_at" type="datetime" defaultValueDate="NOW()">
                <constraints nullable="false" />
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="users" columnName="tos_accepted_at" />
            <dropColumn tableName="users" columnName="pp_accepted_at" />
            <dropColumn tableName="users_aud" columnName="tos_accepted_at" />
            <dropColumn tableName="users_aud" columnName="pp_accepted_at" />
        </rollback>
    </changeSet>
    <changeSet author="brian.wong@dialexa.com" id="tag-15-add-tos-pp-columns-to-user">
        <tagDatabase tag="v15"/>
    </changeSet>
</databaseChangeLog>