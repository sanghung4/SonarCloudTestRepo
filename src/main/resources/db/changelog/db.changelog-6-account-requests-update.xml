<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog logicalFilePath="classpath:changelog-6.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="brant.carthel@dialexa.com" id="dropEmailPrimaryKeyAccountRequests">
        <preConditions onFail="MARK_RAN" onFailMessage="primary key on account_requests doesn't exist">
            <primaryKeyExists tableName="account_requests" primaryKeyName="pk_account_requests"/>
        </preConditions>
        <dropPrimaryKey tableName="account_requests"/>
        <rollback>
            <addPrimaryKey tableName="account_requests" columnNames="email"/>
        </rollback>
    </changeSet>
    <changeSet author="brant.carthel@dialexa.com" id="addIdColumnToAccountRequests">
        <preConditions onFail="MARK_RAN" onFailMessage="id column on account_requests already exists">
            <not>
                <columnExists tableName="account_requests" columnName="id"/>
            </not>
        </preConditions>
        <addColumn tableName="account_requests">
            <column defaultValueComputed="uuid_generate_v4()" name="id" type="UUID">
                <constraints nullable="true" primaryKey="true" primaryKeyName="pk_account_requests_id"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="account_requests" columnName="id"/>
        </rollback>
    </changeSet>
    <changeSet author="brant.carthel@dialexa.com" id="addAccountIdColumnToAccountRequests">
        <preConditions onFail="MARK_RAN" onFailMessage="account_id column on account_requests already exists">
            <not>
                <columnExists tableName="account_requests" columnName="account_id"/>
            </not>
        </preConditions>
        <addColumn tableName="account_requests">
            <column name="account_id" type="UUID">
                <constraints nullable="true" foreignKeyName="fk_account_requests_account_id" referencedTableName="accounts" referencedColumnNames="id"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="account_requests" columnName="account_id"/>
        </rollback>
    </changeSet>
    <changeSet author="bryan.clark@dialexa.com" id="tag-6-account-requests-update">
        <tagDatabase tag="v6"/>
    </changeSet>
</databaseChangeLog>