<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog logicalFilePath="classpath:changelog-8.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="seth@dialexa.com" id="addIdToErpsAccounts">
        <preConditions onFail="MARK_RAN" onFailMessage="id on erps_accounts already exist">
            <not>
                <columnExists tableName="erps_accounts" columnName="id"/>
            </not>
        </preConditions>
        <addColumn tableName="erps_accounts">
            <column name="id" defaultValueComputed="uuid_generate_v4()" type="UUID">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="erps_accounts" columnName="id" />
        </rollback>
    </changeSet>
    <changeSet author="seth@dialexa.com" id="addUniqueToErpsAccounts">
        <addUniqueConstraint constraintName="constraint_unique_accounts" tableName="erps_accounts" columnNames="erp_id, erp_account_id"></addUniqueConstraint>
        <rollback>
            <dropUniqueConstraint tableName="erps_accounts" constraintName="constraint_unique_accounts"></dropUniqueConstraint>
        </rollback>
    </changeSet>
    <changeSet author="bryan.clark@dialexa.com" id="tag-8-add-id-to-erps-accounts">
        <tagDatabase tag="v9"/>
    </changeSet>
</databaseChangeLog>