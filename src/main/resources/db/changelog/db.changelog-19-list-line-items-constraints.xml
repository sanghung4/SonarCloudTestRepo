<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog
    logicalFilePath="classpath:changelog-19.xml"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
>
    <changeSet author="james.feigel@dialexa.com" id="removeListLineItemsDuplicates">
        <sql>
            DELETE FROM list_line_items a USING (
                SELECT
                    MIN(ctid) AS ctid,
                    erp_part_number,
                    list_id
                FROM
                    list_line_items
                GROUP BY
                    erp_part_number,
                    list_id
                HAVING
                    COUNT(*) > 1
            ) b
            WHERE
                a.erp_part_number = b.erp_part_number
                AND a.list_id = b.list_id
                AND a.ctid != b.ctid
        </sql>
    </changeSet>
    <changeSet author="james.feigel@dialexa.com" id="addListLineItemsUniqueConstraints">
        <preConditions onFail="MARK_RAN" onFailMessage="unique constraint already exists">
            <not>
                <indexExists tableName="list_line_items" columnNames="erp_part_number,list_id" />
            </not>
        </preConditions>
        <addUniqueConstraint
            tableName="list_line_items"
            constraintName="list_line_items_erp_part_number_list_id_key"
            columnNames="erp_part_number,list_id"
        />
        <rollback>
            <dropUniqueConstraint
                tableName="list_line_items"
                constraintName="list_line_items_erp_part_number_list_id_key"
            />
        </rollback>
    </changeSet>
    <changeSet author="james.feigel@dialexa.com" id="tag-19-products">
        <tagDatabase tag="products-v19" />
    </changeSet>
</databaseChangeLog>
