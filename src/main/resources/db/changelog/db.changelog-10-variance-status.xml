<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <!-- Change variance_enabled to variance_status (boolean -> enum/varchar) -->
    <changeSet id="1564789742119-1" author="huy">
        <addColumn tableName="pi_count_location_item">
            <column name="variance_status" type="VARCHAR(255)"
                    valueComputed="(SELECT CASE WHEN variance_enabled = true THEN 'UNCOUNTED' ELSE 'NONVARIANCE' END from pi_count_location_item cli where pi_count_location_item.id = cli.id)"></column>
        </addColumn>
    </changeSet>
    <changeSet id="1479984151123-1" author="huy">
        <dropColumn tableName="pi_count_location_item">
            <column name="variance_enabled"></column>
        </dropColumn>
    </changeSet>
    <changeSet id="1349965182473-1" author="huy">
        <addColumn tableName="pi_count_location_item_variance_quantity">
            <column name="created_by" type="VARCHAR(255)"></column>
            <column name="updated_by" type="VARCHAR(255)"></column>
        </addColumn>
    </changeSet>
</databaseChangeLog>