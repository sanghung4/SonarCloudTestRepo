<databaseChangeLog logicalFilePath="classpath:changelog-38.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="brant.carthel@dialexa.com" id="addEmailSentInvitedUsers">
        <preConditions>
            <not>
                <columnExists tableName="invited_users" columnName="is_email_sent" />
                <columnExists tableName="invited_users_aud" columnName="is_email_sent" />
            </not>
        </preConditions>
        <addColumn tableName="invited_users">
            <column name="is_email_sent" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false" />
            </column>
        </addColumn>
        <addColumn tableName="invited_users_aud">
            <column name="is_email_sent" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false" />
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="invited_users" columnName="is_email_sent" />
            <dropColumn tableName="invited_users_aud" columnName="is_email_sent" />
        </rollback>
    </changeSet>
    <changeSet author="brant.carthel@dialexa.com" id="tag-38-add-email-sent-flag-invited-users">
        <tagDatabase tag="v38"/>
    </changeSet>
</databaseChangeLog>
