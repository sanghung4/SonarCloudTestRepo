<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        logicalFilePath="classpath:changelog-44.xml"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="lowercaseUserEmails" author="elliot.rotwein@dialexa.com">
        <preConditions onFail="MARK_RAN" onFailMessage="users table does not exist">
            <tableExists tableName="users"/>
        </preConditions>
        <sql>
            UPDATE users SET email=lower(email);
        </sql>
    </changeSet>
    <changeSet id="lowercaseInvitedUserEmails" author="elliot.rotwein@dialexa.com">
        <preConditions onFail="MARK_RAN" onFailMessage="invited_users table does not exist">
            <tableExists tableName="invited_users"/>
        </preConditions>
        <sql>
            UPDATE invited_users SET email=lower(email);
        </sql>
    </changeSet>
    <changeSet id="lowercaseAccountRequestEmails" author="elliot.rotwein@dialexa.com">
        <preConditions onFail="MARK_RAN" onFailMessage="account_requests table does not exist">
            <tableExists tableName="account_requests"/>
        </preConditions>
        <sql>
            UPDATE account_requests SET email=lower(email);
        </sql>
    </changeSet>
    <changeSet author="elliot.rotwein@dialexa.com" id="v44-lowercase-emails">
        <tagDatabase tag="v44"/>
    </changeSet>
</databaseChangeLog>
