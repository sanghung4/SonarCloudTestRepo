{
  "name": "punchout-customer-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@okta/okta-auth-js": "^7.3.0",
    "@okta/okta-react": "^6.7.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^16.18.25",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "axios": "^1.4.0",
    "clsx": "^1.2.1",
    "dotenv": "^16.1.1",
    "env-cmd": "^10.1.0",
    "formik": "^2.2.9",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "react-router-dom": "^6.11.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "use-local-storage": "^3.0.0",
    "web-vitals": "^2.1.4",
    "yup": "^1.1.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest-junit": "^16.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "prestart": "./scripts/gen-env.sh",
    "check": "prettier -c \"src\" & eslint \"src/**\" --max-warnings=0",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --watchAll=false --coverage --collectCoverage=true --testResultsProcessor=jest-junit",
    "eject": "react-scripts eject",
    "prepare": "husky install"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(axios|lodash-es)/)"
    ],
    "moduleNameMapper": {
      "\\.svg": "<rootDir>/mocks/svgrMock.tsx"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.mocks.{ts,tsx}",
      "!src/util/configurations.ts",
      "!src/api/*.api.ts",
      "!src/test-util/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,css,scss}": [
      "prettier -c *",
      "eslint \"src/**\" --max-warnings 0"
    ]
  }
}
