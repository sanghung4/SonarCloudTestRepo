{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": false,
    "target": "es2019",
    "module": "commonjs",
    "removeComments": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "isolatedModules": false,
    "types": [
      "node",
      "webdriverio",
      "@wdio/mocha-framework"
    ],
    "noEmit": false
  },
  "include": [
    "./specs/**/*.ts",
    "wdio.conf.ts"
  ]
}